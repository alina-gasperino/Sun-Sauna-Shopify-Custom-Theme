<div class="text-carousel" data-section-id="{{ section.id }}" data-section-type="carousel" style="background-color: {{ section.settings.bg_color }}">
    {% if section.blocks.size > 0 %}
        <div class="carousel_wrapper">
            {% for block in section.blocks %}
                <div class="carousel_item"><img src="{{ 'check.svg' | asset_url }}" > {{ block.settings.heading }}</div>
            {% endfor %}
        </div>
    {% endif %}
</div>

{% schema %}
  {
    "name": "Carousel",
    "settings": [
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background Color",
        "default": "#F8F1E9"
      }
    ],
    "max_blocks": 10,
    "blocks": [
      {
        "type": "text",
        "name": "Text",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Text",
            "default": "Text"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Carousel",
        "category": "Text",
        "settings": {},
        "blocks": [
          {
            "type": "text"
          },
          {
            "type": "text"
          }
        ]
      }
    ]
  }
{% endschema %}